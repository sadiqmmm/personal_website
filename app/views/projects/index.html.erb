
<div class="row-fluid">
  <div class="span12">
    <% @projects.each_with_index do |project, index| %>
      <% if index % 2 == 0 %>
        <div class="row-fluid">
          <div class="span3">
            <%= image_tag project.picture(:thumbnail) %>
            <p style="margin-top: 10px;">

              <%= link_to "Visit project URL", project.url, class: "btn btn-block btn-success", target: "_blank" unless project.url.eql?("") %>
            </p>
          </div>
          <div class="span9">
            <h4><%= project.title %></h4>
            <div><%= raw project.description %></div>
          </div>
        </div>
      <% else %>
        <div class="row-fluid">
          <div class="span9">
            <h4><%= project.title %></h4>
            <div><%= raw project.description %></div>
          </div>
          <div class="span3">
            <%= image_tag project.picture(:thumbnail) %>
            <p style="margin-top: 10px;">
              <%= link_to_unless project.url.empty?, "Visit project URL", project.url, class: "btn btn-block btn-success", target: "_blank" %>
              <% if user_signed_in? and current_user.administrator %>
                <%= link_to "Edit project", edit_project_path(project), class: "btn btn-block btn-warning" %>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
      <hr/>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="pagination pagination-centered">
      <%= will_paginate @projects, :renderer => BootstrapPagination::Rails %>
    </div>
  </div>
</div>