<h1>Add a new song</h1>

<%= form_for @song do |f| %>
  <%= render "shared/error_messages", object: @song %>
  <div class="control-group">
    <%= f.label :artist, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :artist, class: "input-block-level" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :title, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :title, class: "input-block-level" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :spotify_link, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :spotify_link, class: "input-block-level" %>
    </div>
  </div>

  <div class="controls">
    <%= f.submit "Add song", class: "btn btn-block btn-large btn-success" %>
  </div>
<% end %>
