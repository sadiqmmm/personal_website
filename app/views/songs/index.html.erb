<h1>Enjoy the music!</h1>

<div class="row-fluid">
  <div class="span12">
    <% @songs.each_with_index do |song, index| %>
      <div class="span3" <% if index % 4 == 0 %>style="margin-left: 0px;"<% end %>>
        <%= spotify_player(song.spotify_link) %>
      </div>
    <% end %> 
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="pagination pagination-centered">
      <%= will_paginate @songs, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>