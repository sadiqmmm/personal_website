<ul class="nav nav-tabs" id="articles-and-comments">
  <li class="active">
    <a href="#popular-articles">Popular Articles</a>
  </li>
</ul>
 
<div class="tab-content">
  <div class="tab-pane active" id="popular-articles">
    <ul>
      <% @more_articles.each do |article| %>
        <li>
          <%= link_to article.title, article %>
          <p>
            <i class="icon-calendar"></i> <%= article.created_at.strftime("%d %b. %Y") %> | 
            <%= link_to article_path( article, anchor: "comments") do %>
              <i class="icon-comment"></i> <%= pluralize( article.comments.count, "comment") %>
            <% end %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>