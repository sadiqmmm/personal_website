<div id="articles-carousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#articles-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#articles-carousel" data-slide-to="1"></li>
    <li data-target="#articles-carousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <% @last_articles.each_with_index do |article, index| %>
      <div class="item <% if index == 0 %>active <% end %>">
        <%= image_tag article.picture(:header) %>
        <div class="carousel-caption">
          <h4>
            <%= link_to article.title, article %> | 
            <%= link_to article_path( article, anchor: "comments") do %>
              <i class="icon-comment"></i> <%= pluralize( article.comments.count, "comment") %>
            <% end %>
          </h4>
          <p><%= article.summary %></p>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#articles-carousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#articles-carousel" data-slide="next">&rsaquo;</a>
</div>